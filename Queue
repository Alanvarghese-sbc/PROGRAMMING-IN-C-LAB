#include <stdio.h>
#define MAX 5
int queue[MAX],rear = -1,front=-1;
int insert();
int delete();
int display();

int main()
{
  int ch;
  do
  {
    printf("\n <<<MAIN MENU>>>\n");
    printf("Enter the your choice from below\n1.INSERT\n2.DELETE\n3.DISPLAY\n4.EXIT");
    scanf("%d",&ch);
    switch(ch)
      {
        case 1 : insert();
                  break;
        case 2 : delete();
                  break;
        case 3 : display();
                  break;
      }
  }while(ch!=4);
  return 0;
}

int insert()
{
  int item;
  if(rear==MAX-1)
  {
    printf("OVERFLOW");
  }
  else
  {
    printf("Enter the element to insert : ");
    scanf("%d",&item);
    if(rear==-1 && front==-1)
    {
      front=0;
      rear=0;
    }else
    {
      rear++;
    }
    queue[rear]=item;
  }return 0;
}

int delete()
  {
    int val;
    if(front==-1 || front > rear)
      printf("UNDERFLOW");
    else
    {
      val=queue[front];
      front++;
      printf("deleted element is %d",val);
    }return 0;
  }

int dislay()
{
  int i;
  if(front==-1 && rear==-1)
    printf("QUEUE IS EMPTY");
  else
  {
    printf("QUEUE\n");
    for(i=front;i<rear;front++)
      {
        printf("%d\t",queue[i]);
      }
  }return 0;
}
